<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="forms.detailsController">
    <TableView fx:id="bookTable" prefWidth="400">
        <columns>
            <TableColumn fx:id="tituloColumn" text="Título" prefWidth="150"/>
            <TableColumn fx:id="autorColumn" text="Autor" prefWidth="150"/>
            <TableColumn fx:id="quantPaginasColumn" text="Quantidade de Páginas" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <children>
            <TextField fx:id="tituloField" promptText="Título"/>
            <TextField fx:id="autorField" promptText="Autor"/>
            <TextField fx:id="quantPaginasField" promptText="Quantidade de Páginas"/>
            <Button text="Add" onAction="#handleAddBook"/>
            <Button text="Update" onAction="#handleUpdateBook"/>
            <Button text="Delete" onAction="#handleDeleteBook"/>
        </children>
    </HBox>
    <VBox.margin>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </VBox.margin>
</VBox>
